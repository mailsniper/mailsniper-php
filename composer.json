{
    "name": "mailsniper/mailsniper-php",
    "description": "Official PHP SDK for the MailSniper Email Verification API",
    "type": "library",
    "keywords": ["email", "validation", "verification", "mailsniper", "api"],
    "license": "MIT",
    "authors": [
        {
            "name": "MailSniper",
            "email": "hello@mailsniperapp.com"
        }
    ],
    "require": {
        "php": "^8.1",
        "psr/http-client": "^1.0",
        "psr/http-factory": "^1.0",
        "ext-json": "*"
    },
    "suggest": {
        "guzzlehttp/guzzle": "Recommended PSR-18 HTTP client implementation"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.5",
        "phpstan/phpstan": "^1.10",
        "friendsofphp/php-cs-fixer": "^3.48",
        "guzzlehttp/guzzle": "^7.8",
        "php-http/discovery": "^1.19"
    },
    "autoload": {
        "psr-4": {
            "MailSniper\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "MailSniper\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "phpstan": "phpstan analyse",
        "cs-fix": "php-cs-fixer fix",
        "cs-check": "php-cs-fixer fix --dry-run --diff",
        "quality": [
            "@phpstan",
            "@cs-check",
            "@test"
        ]
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "php-http/discovery": true
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
